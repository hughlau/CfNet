    <script src="~/Scripts/bstable/js/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/Scripts/date/js/laydate.js" ></script>


    <script type="text/javascript">
        function datas() {
            $('#table').bootstrapTable({
                method: "post",
                striped: true,
                singleSelect: false,
                url: "PageData",
                dataType: "json",
                pagination: true, //分页
                sidePagination: "server",
                pageSize: 10,
                pageNumber: 1,
                search: false, //显示搜索框
                contentType: "application/x-www-form-urlencoded",
                queryParams: function (params) {
                    //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
                    var temp = {
                        pageSize: params.limit,                         //页面大小
                        pageNumber: (params.offset / params.limit) + 1,   //页码
                        sort: "UserID",      //排序列名  
                        sortOrder: "asc", //排位命令（desc，asc） 
                        userName: $("#txtUser").val(),
                        mobile: $("#txtMobile").val(),
                        slExist: $("#slExist").val()
                    };
                    return temp;
                },
                columns: [
                    {
                        checkbox: "true",
                        field: 'check',
                        align: 'center',
                        valign: 'middle'
                    }
                    ,
                    {
                        title: "id",
                        field: 'UserID',
                        align: 'center',
                        valign: 'middle',
                        visible: false
                    },
                    {
                        title: '用户名',
                        field: 'UserName',
                        align: 'center',
                        valign: 'middle'
                    },
                    {
                        title: '电话',
                        field: 'Mobile',
                        align: 'center',
                        valign: 'middle'
                    },
                    {
                        title: '邮箱',
                        field: 'Email',
                        align: 'center'
                    },
                    {
                        title: '创建时间',
                        field: 'CreateTime',
                        align: 'center'
                    },
                    {
                        title: '是否有效',
                        field: 'IsExist',
                        align: 'center',
                        formatter: function (cellval, row) {
                            //var cellval=$("#station").val();
                            if (cellval == 0) {
                                return '<div  style="color:red">有效</div>';
                            } else if (cellval == 1) {
                                return '<div  style="color:green">无效</div>';
                            } else {
                                return cellval;
                            }
                        }
                    },
                    {
                        title: '操作',
                        field: 'opear',
                        align: 'center',
                        formatter: function (value, row) {
                            var e = '<a  href="#" title="查看详情" onclick="handleEvent(\'' + row.id + '\')">编辑</a> ';


                            return e;
                        }
                    }
                ]
            });
        }
    $(function () {
        datas();
        $("#but_open").click(function () {
            var opt = {
                url: "PageData",
                silent: true,
                pageSize: 10,                         //页面大小
                pageNumber: 1,   //页码
                sort: "UserID",      //排序列名  
                sortOrder: "asc", //排位命令（desc，asc） 
                userName: $("#txtUser").val(),
                mobile: $("#txtMobile").val(),
                slExist: $("#slExist").val()
            };

            $("#table").bootstrapTable('refresh', opt);
        });
        $("#but_close02").click(function () {
            $("#txtUser").val('');
            $("#txtMobile").val('');
            $("#slExist").val('2');
        })
    })

    </script>
